<h1>Details of Idea</h1>

<h2><%= @idea.title  %></h2>
<p><%= @idea.body  %></p>

<p>Members:</p>
<ol>
  <% @idea.users.each do |m|  %>  
    <li><%= m.user_name %></li>
  <% end  %>
</ol>
<hr>
<h2>Image Attachment</h2>
<%= image_tag @idea.ideapic.url %>

<hr>
<h2> Add a Comment</h2>
<%= form_for [@idea,@comment] do |f|  %>
  <div class="form-group">
    <%= f.label :body  %>
    <%= f.text_area :body, class: "form-control"  %>
  </div>
  <%= f.submit "Submit Comment", class: "btn btn-primary"  %>
<% end  %>
<hr>
<h2>Comments</h2>
<table>
  <thead>
    <th>Author</th>
    <th>Comment</th>
  </thead>
  <tbody>
    <% @idea.comments.each do |c|  %>
      <tr>
        <td><%= c.user.user_name  %></td>
        <td><%= c.body  %></td>
      </tr>
    <% end  %>
  </tbody>
</table>
