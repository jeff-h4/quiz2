
<%= form_for @idea do |f|  %>
  <div class="form-group">
    <%= f.label :title  %>
    <%= f.text_field :title  %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div class="form-group">
    <%= f.label :ideapic%>
    <%= f.file_field :ideapic%>
  </div>

  <%= f.submit  %>
<% end  %>
