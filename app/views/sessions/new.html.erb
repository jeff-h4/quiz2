<h1>Sign In</h1>
<%# Special Notes about Sessions  %>
<%# - There is no object @session. So you have to change the tags %>
<%= render "layouts/alertflash"  %>
<%= render "shared/standard_errors", object: @user  %>
<%= form_tag sessions_path do  %>
  <div class="form-group">
    <%= label_tag :email  %>
    <%= email_field_tag :email, "", class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, "", class: "form-control"  %>
  </div>
  <%= submit_tag "Sign In", class: "btn btn-primary"  %>
<% end  %>
